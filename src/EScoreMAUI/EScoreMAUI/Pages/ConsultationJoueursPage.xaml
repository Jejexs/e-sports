<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EScoreMAUI.Pages.ConsultationJoueursPage">
    
    <ContentPage.Content>
        <!-- Contenu de la page de consultation des joueurs -->
        <StackLayout>
            <Label Text="Consultation des Joueurs" FontSize="Large" HorizontalOptions="Center" />
            <ListView x:Name="lstJoueurs" ItemsSource="{Binding Joueurs}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Nom}" Detail="{Binding Prenom}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
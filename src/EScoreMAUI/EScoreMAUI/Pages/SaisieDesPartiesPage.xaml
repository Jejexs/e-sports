<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EScoreMAUI.Pages.SaisieDesPartiesPage">

    <ScrollView>
        <StackLayout Padding="20">
            <Label Text="Saisie des Parties et Statistiques" FontSize="Large" HorizontalOptions="Center" />

            <!-- Formulaire de saisie des parties -->
            <StackLayout Spacing="10">
                <Entry Placeholder="Date" x:Name="DateEntry" />
                <Entry Placeholder="Lieu" x:Name="LieuEntry" />
                <Entry Placeholder="Jeu" x:Name="JeuEntry" />
                <Entry Placeholder="Equipe 1" x:Name="Equipe1Entry" />
                <Entry Placeholder="Equipe 2" x:Name="Equipe2Entry" />

                <Button Text="Enregistrer la partie" Clicked="OnEnregistrerPartieClicked" />
            </StackLayout>
        </StackLayout>
    </ScrollView>

</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EScoreMAUI.Pages.PartiesPage">

    <StackLayout Padding="20">
        <Label Text="Liste des Parties" FontSize="Large" HorizontalOptions="Center" />

        <!-- Affichage de la liste des parties -->
        <ListView x:Name="PartiesListView" ItemSelected="OnPartieSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Id}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>

</ContentPage>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:EScoreMAUI.Views"
       x:Class="EScoreMAUI.AppShell">

    <TabBar>
        <ShellContent Title="Home"
                      Icon="home.png"
                      Route="home"
                      ContentTemplate="{DataTemplate views:HomePage}" />
        <ShellContent Title="Utilisateurs"
                  Icon="user.png"
                  Route="utilisateurs"
                  ContentTemplate="{DataTemplate views:UtilisateursPage}" />
        <ShellContent Title="Admin"
                  Icon="admin.png"
                  Route="admin"
                  ContentTemplate="{DataTemplate views:AdminPage}" />
    </TabBar>
</Shell>

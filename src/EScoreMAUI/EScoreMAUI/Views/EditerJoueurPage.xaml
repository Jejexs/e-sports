<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EScoreMAUI.Views.EditerJoueurPage">
    
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label Text="Edition du Joueur" FontSize="Large" HorizontalOptions="Center" />
            <StackLayout Spacing="10">
                <Entry Placeholder="Nom" x:Name="NomJoueurEntry" />
                <Entry Placeholder="Prenom" x:Name="PrenomJoueurEntry" />
                <Entry Placeholder="Pseudo" x:Name="PseudoJoueurEntry" />
                
                <Button Text="Enregistrer le Joueur" Clicked="OnEnregistrerJoueurClicked" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
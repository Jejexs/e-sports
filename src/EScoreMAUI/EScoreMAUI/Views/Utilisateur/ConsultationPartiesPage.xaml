<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:EScoreMAUI"
             x:Class="EScoreMAUI.Views.ConsultationPartiesPage">

    <ContentPage.Content>
        <!-- Contenu de la page de consultation des parties -->
        <StackLayout>
            <Label Text="Consultation des Parties" FontSize="Large" HorizontalOptions="Center" />
            <ListView x:Name="PartiesListView" ItemsSource="{Binding Parties}" HasUnevenRows="True">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Padding="10">
                                <Label Text="{Binding Name}" FontSize="Large" />
                                <Label Text="{Binding Role}" FontSize="Medium" />
                                <Label Text="{Binding Email}" FontSize="Medium" />
                                <Label Text="{Binding Phone}" FontSize="Medium" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
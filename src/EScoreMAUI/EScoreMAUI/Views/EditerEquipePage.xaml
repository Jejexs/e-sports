<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EScoreMAUI.Views.EditerEquipePage">
    
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label Text="Édition de l'Équipe" FontSize="Large" HorizontalOptions="Center" />

            <Entry Placeholder="Nom de l'équipe" x:Name="NomEquipeEntry" />

            <Button Text="Enregistrer l'équipe" Clicked="OnEnregistrerEquipeClicked" />

            <Button Text="Supprimer l'équipe" Clicked="OnSupprimerEquipeClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
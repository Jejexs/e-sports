<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:EScoreMAUI.ViewModels"
             x:Class="EScoreMAUI.Views.ConsultationPartiesPage">

    <ContentPage.BindingContext>
        <viewmodels:PartiesViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <StackLayout>
            <Label Text="Consultation des Parties" FontSize="Large" HorizontalOptions="Center" />
            <ListView x:Name="PartiesListView" ItemsSource="{Binding Parties}" HasUnevenRows="True" ItemSelected="ViewStatistiques">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Padding="10">
                                <Label Text="{Binding Equipe1.Nom}" FontSize="Large" />
                                <Label Text="vs" FontSize="Large" />
                                <Label Text="{Binding Equipe2.Nom}" FontSize="Large" />
                                <Label Text="{Binding Jeu}" FontSize="Medium" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
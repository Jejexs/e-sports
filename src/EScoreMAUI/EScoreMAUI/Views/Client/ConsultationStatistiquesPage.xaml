<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EScoreMAUI.Views.ConsultationStatistiquesPage"
             xmlns:viewmodels="clr-namespace:EScoreMAUI.ViewModels">

    <ContentPage.BindingContext>
        <viewmodels:StatistiquesViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label Text="Statistiques" FontSize="Title" />
            <!-- Afficher le nom des équipes (équipe1 et équipe2) et l'id de la partie -->
            <Label Text="{Binding Partie.Id}" FontSize="Large" />
            <Label Text="{Binding Equipe1.Nom}" FontSize="Large" />
            <Label Text="{Binding Equipe2.Nom}" FontSize="Large" />
            <!-- Afficher les points marqués par chaque équipe -->
            <Label Text="{Binding Equipe1.Points}" FontSize="Large" />
            <Label Text="{Binding Equipe2.Points}" FontSize="Large" />
            <!-- Afficher le nom de l'équipe gagnante et perdante -->
            <Label Text="{Binding NomEquipeGagnante}" FontSize="Large" />
            <Label Text="{Binding NomEquipePerdante}" FontSize="Large" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>